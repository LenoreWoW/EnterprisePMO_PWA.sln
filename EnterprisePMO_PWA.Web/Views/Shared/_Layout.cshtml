<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - EnterprisePMO_PWA</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="manifest" href="~/manifest.json" />
    <script src="~/js/supabaseClient.js" type="module"></script>
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" href="/">
                    <img src="/icons/icon-192.jpg" alt="Enterprise PMO Logo" width="32" height="32" class="me-2 rounded">
                    <span>EnterprisePMO</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Dashboard/Index">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Kanban/Index">Kanban</a>
                        </li>
                        <li class="nav-item" permission="ManageProjects">
                            <a class="nav-link" href="/Project/List">Projects</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="administrationDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Administration
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="administrationDropdown">
                                <li><a class="dropdown-item" href="/RoleHierarchy/Index">Role Hierarchy</a></li>
                                <li permission="ManageRoles"><a class="dropdown-item" href="/RoleManagement/Index">Manage Roles</a></li>
                                <li permission="ManageUsers"><a class="dropdown-item" href="/User/Index">Manage Users</a></li>
                                <li permission="ViewAuditLogs"><a class="dropdown-item" href="/AuditLogs/Index">Audit Logs</a></li>
                            </ul>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="notificationsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-bell"></i>
                                    <span class="badge rounded-pill bg-danger notification-badge d-none" id="notificationCount">0</span>
                                </a>
                                <div class="dropdown-menu dropdown-menu-end notification-dropdown" aria-labelledby="notificationsDropdown">
                                    <div class="d-flex justify-content-between align-items-center p-3 border-bottom">
                                        <h6 class="mb-0">Notifications</h6>
                                        <button class="btn btn-sm btn-link text-decoration-none" id="markAllRead">Mark all read</button>
                                    </div>
                                    <div id="notificationList">
                                        <div class="text-center p-3">
                                            <i class="bi bi-bell-slash text-muted fs-4"></i>
                                            <p class="text-muted mb-0">No new notifications</p>
                                        </div>
                                    </div>
                                    <div class="p-2 border-top text-center">
                                        <a href="/Notifications" class="btn btn-sm btn-light w-100">View all notifications</a>
                                    </div>
                                </div>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle me-1"></i>
                                    @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li><a class="dropdown-item" href="/Account/Profile"><i class="bi bi-person me-2"></i>Profile</a></li>
                                    <li><a class="dropdown-item" href="/Account/Settings"><i class="bi bi-gear me-2"></i>Settings</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form action="/Account/Logout" method="post" id="logoutForm">
                                            <button type="submit" class="dropdown-item text-danger">
                                                <i class="bi bi-box-arrow-right me-2"></i>Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/Account/Login"><i class="bi bi-box-arrow-in-right me-1"></i>Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Account/Signup"><i class="bi bi-person-plus me-1"></i>Sign Up</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main role="main" class="container-fluid py-4">
        @RenderBody()
    </main>
    <footer class="footer mt-auto py-3 bg-light">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <span class="text-muted">EnterprisePMO_PWA &copy; @DateTime.Now.Year</span>
                </div>
                <div class="col-md-6 text-md-end">
                    <a href="/Home/Privacy" class="text-muted text-decoration-none me-3">Privacy Policy</a>
                    <a href="/Home/Terms" class="text-muted text-decoration-none">Terms of Service</a>
                </div>
            </div>
        </div>
    </footer>
    
    <!-- Application status indicator -->
    <div id="app-status" class="position-fixed bottom-0 end-0 mb-4 me-4 d-none">
        <div class="toast align-items-center text-white bg-warning" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    <i class="bi bi-wifi-off me-2"></i>You are offline. Some features may be limited.
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    <script>
        // Check online/offline status
        function updateOnlineStatus() {
            const statusToast = bootstrap.Toast.getOrCreateInstance(document.getElementById('app-status'));
            if (navigator.onLine) {
                statusToast.hide();
            } else {
                statusToast.show();
            }
        }

        window.addEventListener('online',  updateOnlineStatus);
        window.addEventListener('offline', updateOnlineStatus);
        
        // Initialize tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>