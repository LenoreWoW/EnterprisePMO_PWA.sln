<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Enterprise PMO</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="manifest" href="~/manifest.json" />
    <style>
        body {
            font-family: 'Inter', sans-serif;
            --tw-bg-opacity: 1;
            background-color: rgba(249, 250, 251, var(--tw-bg-opacity));
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }
    </style>
</head>
<body>
    <!-- Background pattern with low opacity -->
    <div class="fixed inset-0 bg-gray-50" style="background-image: url('https://images.unsplash.com/photo-1557683316-973673baf926?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2282&q=80'); background-size: cover; background-position: center; opacity: 0.05;"></div>
    
    <header class="relative">
        <nav class="bg-white border-b border-gray-200">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex justify-between h-16">
                    <div class="flex">
                        <div class="flex-shrink-0 flex items-center">
                            <a href="/" class="text-blue-600 font-semibold text-xl">
                                <i class="bi bi-kanban me-2"></i>Enterprise PMO
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    
    <main class="relative flex-grow py-10">
        <div class="container max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            @RenderBody()
        </div>
    </main>

    <footer class="relative bg-white border-t border-gray-200 mt-auto">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
            <div class="md:flex md:items-center md:justify-between">
                <div class="md:<footer class="relative bg-white border-t border-gray-200 mt-auto">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
        <div class="md:flex md:items-center md:justify-between">
            <div class="text-center md:text-left text-gray-500 text-sm">
                &copy; @DateTime.Now.Year - Enterprise PMO
            </div>
            <div class="mt-4 md:mt-0 text-center md:text-right">
                <a asp-controller="Home" asp-action="Privacy" class="text-gray-500 hover:text-gray-700 text-sm me-3">Privacy</a>
                <a asp-controller="Home" asp-action="Terms" class="text-gray-500 hover:text-gray-700 text-sm">Terms</a>
            </div>
        </div>
    </div>
</footer>

<!-- JavaScript Dependencies -->
<script src="https://code.jquery.com/jquery-3.6.3.min.js" integrity="sha256-pvPw+upLPUjgMXY0G+8O0xUf+/Im1MZjXxxgOcBQBXU=" crossorigin="anonymous"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>