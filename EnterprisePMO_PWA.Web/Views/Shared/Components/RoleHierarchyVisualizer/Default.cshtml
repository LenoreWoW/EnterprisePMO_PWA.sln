@model List<EnterprisePMO_PWA.Domain.Entities.Role>

<div class="role-hierarchy-visualizer">
    <div class="space-y-8">
        @foreach (var role in Model)
        {
            <div class="relative">
                <!-- Level indicator - converted from Bootstrap to Tailwind -->
                <div class="flex items-center">
                    <div class="absolute left-0 w-12 h-12 rounded-full bg-blue-500 flex items-center justify-center text-white font-semibold text-sm border-4 border-white z-10 shadow-md">
                        @role.HierarchyLevel
                    </div>
                    
                    <!-- Role box - converted from Bootstrap to Tailwind -->
                    <div class="ml-20 bg-white border border-gray-200 rounded-lg shadow-sm px-6 py-4 w-full">
                        <div class="mb-2">
                            <div class="font-semibold text-gray-900 text-lg">@role.RoleName</div>
                            <div class="text-gray-500 text-sm">@role.Description</div>
                        </div>
                        
                        <div class="mt-4">
                            <div class="text-sm font-medium text-gray-700 mb-2">Permissions</div>
                            <div class="flex flex-wrap gap-2">
                                @if (role.CanManageProjects)
                                {
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                        <svg class="h-3 w-3 mr-1" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                                        </svg>
                                        Manage Projects
                                    </span>
                                }
                                @if (role.CanManageUsers)
                                {
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                        <svg class="h-3 w-3 mr-1" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                                        </svg>
                                        Manage Users
                                    </span>
                                }
                                @if (role.CanApproveRequests)
                                {
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                                        <svg class="h-3 w-3 mr-1" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                        </svg>
                                        Approve Requests
                                    </span>
                                }
                                @if (role.CanManageRoles)
                                {
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
                                        <svg class="h-3 w-3 mr-1" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                                        </svg>
                                        Manage Roles
                                    </span>
                                }
                                @if (role.CanViewReports)
                                {
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                                        <svg class="h-3 w-3 mr-1" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                                        </svg>
                                        View Reports
                                    </span>
                                }
                                @if (role.CanViewAuditLogs)
                                {
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                        <svg class="h-3 w-3 mr-1" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
                                        </svg>
                                        View Audit Logs
                                    </span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Vertical connector line - uses Tailwind absolute positioning instead of Bootstrap -->
                @if (Model.IndexOf(role) < Model.Count - 1)
                {
                    <div class="absolute left-6 top-12 h-16 w-0.5 bg-gray-300"></div>
                }
            </div>
        }
    </div>
</div>

<!-- Removed Bootstrap styling and replaced with Tailwind -->
<style>
    .role-hierarchy-visualizer {
        @* No Bootstrap classes needed here anymore *@
    }
</style>

<!-- No need for jQuery or Bootstrap JS initialization -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Any custom behavior would go here
    });
</script>