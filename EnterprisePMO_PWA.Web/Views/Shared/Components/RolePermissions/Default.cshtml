@model EnterprisePMO_PWA.Domain.Entities.Role

<div class="role-permissions">
    <!-- Converted from Bootstrap grid to Tailwind grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div>
            <div class="@(Model.CanManageProjects ? "bg-green-50 border border-green-200" : "bg-gray-50 border border-gray-200") rounded-lg p-4 h-full transition-colors duration-200">
                <div class="flex items-center justify-center mb-3">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 @(Model.CanManageProjects ? "text-green-500" : "text-gray-400")" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                </div>
                <div class="text-center mb-2 font-medium">Manage Projects</div>
                <div class="text-center">
                    @if (Model.CanManageProjects)
                    {
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                            Enabled
                        </span>
                    }
                    else
                    {
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                            Disabled
                        </span>
                    }
                </div>
            </div>
        </div>
        
        <div>
            <div class="@(Model.CanManageUsers ? "bg-green-50 border border-green-200" : "bg-gray-50 border border-gray-200") rounded-lg p-4 h-full transition-colors duration-200">
                <div class="flex items-center justify-center mb-3">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 @(Model.CanManageUsers ? "text-green-500" : "text-gray-400")" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                    </svg>
                </div>
                <div class="text-center mb-2 font-medium">Manage Users</div>
                <div class="text-center">
                    @if (Model.CanManageUsers)
                    {
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                            Enabled
                        </span>
                    }
                    else
                    {
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                            Disabled
                        </span>
                    }
                </div>
            </div>
        </div>
        
        <div>
            <div class="@(Model.CanApproveRequests ? "bg-green-50 border border-green-200" : "bg-gray-50 border border-gray-200") rounded-lg p-4 h-full transition-colors duration-200">
                <div class="flex items-center justify-center mb-3">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 @(Model.CanApproveRequests ? "text-green-500" : "text-gray-400")" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
                <div class="text-center mb-2 font-medium">Approve Requests</div>
                <div class="text-center">
                    @if (Model.CanApproveRequests)
                    {
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                            Enabled
                        </span>
                    }
                    else
                    {
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                            Disabled
                        </span>
                    }
                </div>
            </div>
        </div>
        
        <div>
            <div class="@(Model.CanManageRoles ? "bg-green-50 border border-green-200" : "bg-gray-50 border border-gray-200") rounded-lg p-4 h-full transition-colors duration-200">
                <div class="flex items-center justify-center mb-3">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 @(Model.CanManageRoles ? "text-green-500" : "text-gray-400")" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                    </svg>
                </div>
                <div class="text-center mb-2 font-medium">Manage Roles</div>
                <div class="text-center">
                    @if (Model.CanManageRoles)
                    {
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                            Enabled
                        </span>
                    }
                    else
                    {
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                            Disabled
                        </span>
                    }
                </div>
            </div>
        </div>
        
        <div>
            <div class="@(Model.CanViewReports ? "bg-green-50 border border-green-200" : "bg-gray-50 border border-gray-200") rounded-lg p-4 h-full transition-colors duration-200">
                <div class="flex items-center justify-center mb-3">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 @(Model.CanViewReports ? "text-green-500" : "text-gray-400")" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                    </svg>
                </div>
                <div class="text-center mb-2 font-medium">View Reports</div>
                <div class="text-center">
                    @if (Model.CanViewReports)
                    {
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                            Enabled
                        </span>
                    }
                    else
                    {
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                            Disabled
                        </span>
                    }
                </div>
            </div>
        </div>
        
        <div>
            <div class="@(Model.CanViewAuditLogs ? "bg-green-50 border border-green-200" : "bg-gray-50 border border-gray-200") rounded-lg p-4 h-full transition-colors duration-200">
                <div class="flex items-center justify-center mb-3">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 @(Model.CanViewAuditLogs ? "text-green-500" : "text-gray-400")" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
                    </svg>
                </div>
                <div class="text-center mb-2 font-medium">View Audit Logs</div>
                <div class="text-center">
                    @if (Model.CanViewAuditLogs)
                    {
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                            Enabled
                        </span>
                    }
                    else
                    {
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                            Disabled
                        </span>
                    }
                </div>
            </div>
        </div>
    </div>
    
    <!-- Converted Bootstrap card and progress to Tailwind -->
    <div class="mt-6 bg-gray-50 rounded-lg border border-gray-200 p-4">
        <div>
            <div class="flex items-center justify-between mb-1">
                <span class="text-sm font-medium text-gray-700">Hierarchy Level</span>
                <span class="text-sm font-medium text-gray-700">@Model.HierarchyLevel</span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-2">
                <div class="bg-blue-600 h-2 rounded-full transition-all duration-300" style="width: @(Model.HierarchyLevel)%"></div>
            </div>
        </div>
        
        <div class="mt-4">
            <span class="text-sm font-medium text-gray-700">Inheritance Status:</span>
            @if (Model.InheritsPermissions)
            {
                <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                    Inherits Permissions
                </span>
                <p class="mt-1 text-xs text-gray-500">This role inherits permissions from roles below it in the hierarchy</p>
            }
            else
            {
                <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                    No Inheritance
                </span>
                <p class="mt-1 text-xs text-gray-500">This role does not inherit permissions</p>
            }
        </div>
    </div>
</div>