@{
    ViewData["Title"] = "Dashboard";
}

<div class="container">
    <div class="mb-4">
        <h2>Dashboard</h2>
        <p class="text-muted">Welcome to your project management dashboard.</p>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex align-items-center mb-3">
                        <div class="me-3 text-primary">
                            <i class="bi bi-clipboard-data fs-4"></i>
                        </div>
                        <h5 class="card-title mb-0">Active Projects</h5>
                    </div>
                    <h2 class="display-5 mb-0 fw-bold mt-auto">@(ViewBag.ActiveProjects ?? 12)</h2>
                    <div class="mt-2">
                        <a href="/Project/List" class="btn btn-sm btn-outline-primary" data-requires-auth="true">View all projects</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex align-items-center mb-3">
                        <div class="me-3 text-success">
                            <i class="bi bi-list-check fs-4"></i>
                        </div>
                        <h5 class="card-title mb-0">Pending Tasks</h5>
                    </div>
                    <h2 class="display-5 mb-0 fw-bold mt-auto">@(ViewBag.PendingTasks ?? 18)</h2>
                    <div class="mt-2">
                        <a href="#" class="btn btn-sm btn-outline-success" data-requires-auth="true">View kanban board</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex align-items-center mb-3">
                        <div class="me-3 text-info">
                            <i class="bi bi-arrow-repeat fs-4"></i>
                        </div>
                        <h5 class="card-title mb-0">Pending Changes</h5>
                    </div>
                    <h2 class="display-5 mb-0 fw-bold mt-auto">@(ViewBag.PendingChanges ?? 4)</h2>
                    <div class="mt-2">
                        <a href="#" class="btn btn-sm btn-outline-info" data-requires-auth="true">View change requests</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex align-items-center mb-3">
                        <div class="me-3 text-dark">
                            <i class="bi bi-graph-up fs-4"></i>
                        </div>
                        <h5 class="card-title mb-0">Overall Progress</h5>
                    </div>
                    <h2 class="display-5 mb-0 fw-bold mt-auto">@(ViewBag.OverallProgress ?? 76)%</h2>
                    <div class="mt-2">
                        <a href="#" class="btn btn-sm btn-outline-dark" data-requires-auth="true">View reports</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Upcoming Deadlines section -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Upcoming Deadlines</h5>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        <!-- Deadline 1 -->
                        <div class="list-group-item p-3">
                            <h6 class="mb-1">Customer Mobile App</h6>
                            <div class="text-muted small mb-2">Due in 28 days on Apr 23, 2025</div>
                            <div class="progress" style="height: 5px;">
                                <div class="progress-bar bg-warning" role="progressbar" style="width: 65%;" aria-valuenow="65" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                            <div class="d-flex justify-content-between align-items-center mt-2">
                                <span class="small">65% complete</span>
                                <a href="#" class="btn btn-sm btn-link p-0" data-requires-auth="true">View</a>
                            </div>
                        </div>
                        <!-- Deadline 2 -->
                        <div class="list-group-item p-3">
                            <h6 class="mb-1">Data Center Migration</h6>
                            <div class="text-muted small mb-2">Due in 45 days on May 10, 2025</div>
                            <div class="progress" style="height: 5px;">
                                <div class="progress-bar bg-success" role="progressbar" style="width: 40%;" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                            <div class="d-flex justify-content-between align-items-center mt-2">
                                <span class="small">40% complete</span>
                                <a href="#" class="btn btn-sm btn-link p-0" data-requires-auth="true">View</a>
                            </div>
                        </div>
                        <!-- Deadline 3 -->
                        <div class="list-group-item p-3">
                            <h6 class="mb-1">Security Compliance Audit</h6>
                            <div class="text-muted small mb-2">Due in 5 days on Apr 1, 2025</div>
                            <div class="progress" style="height: 5px;">
                                <div class="progress-bar bg-danger" role="progressbar" style="width: 85%;" aria-valuenow="85" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                            <div class="d-flex justify-content-between align-items-center mt-2">
                                <span class="small">85% complete</span>
                                <a href="#" class="btn btn-sm btn-link p-0" data-requires-auth="true">View</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Recent Projects -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Recent Projects</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Client</th>
                                    <th>Deadline</th>
                                    <th>Status</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Project 1 -->
                                <tr>
                                    <td>ERP System Migration</td>
                                    <td>Internal IT</td>
                                    <td>Jul 25, 2025</td>
                                    <td><span class="badge bg-success">On Track</span></td>
                                    <td><a href="#" class="btn btn-sm btn-outline-primary" data-requires-auth="true">View</a></td>
                                </tr>
                                <!-- Project 2 -->
                                <tr>
                                    <td>Customer Mobile App</td>
                                    <td>Marketing Division</td>
                                    <td>Apr 23, 2025</td>
                                    <td><span class="badge bg-warning text-dark">At Risk</span></td>
                                    <td><a href="#" class="btn btn-sm btn-outline-primary" data-requires-auth="true">View</a></td>
                                </tr>
                                <!-- Project 3 -->
                                <tr>
                                    <td>Digital Transformation</td>
                                    <td>Finance Dept</td>
                                    <td>Aug 12, 2025</td>
                                    <td><span class="badge bg-success">On Track</span></td>
                                    <td><a href="#" class="btn btn-sm btn-outline-primary" data-requires-auth="true">View</a></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Create Project Button -->
    <div class="text-center my-4">
        <a href="/Project/Create" class="btn btn-primary" data-requires-auth="true">
            <i class="bi bi-plus-circle me-1"></i> Create New Project
        </a>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add auth token to all links with data-requires-auth
            if (window.authManager && window.authManager.isAuthenticated()) {
                const token = window.authManager.getToken();
                if (token) {
                    const authLinks = document.querySelectorAll('[data-requires-auth="true"]');
                    authLinks.forEach(link => {
                        if (!link.href.includes('auth_token=')) {
                            const url = new URL(link.href, window.location.origin);
                            url.searchParams.set('auth_token', token);
                            link.href = url.toString();
                        }
                    });
                }
            }
        });
    </script>
}