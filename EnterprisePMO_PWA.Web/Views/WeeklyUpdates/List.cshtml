@model IEnumerable<EnterprisePMO_PWA.Domain.Entities.WeeklyUpdate>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Weekly Updates";
}
<h1>Weekly Updates</h1>
<a href="/WeeklyUpdates/Create?projectId=@ViewBag.ProjectId" class="btn btn-primary mb-3">Submit New Update</a>
<table class="table">
    <thead>
        <tr>
            <th>Week Ending</th>
            <th>Accomplishments</th>
            <th>Next Steps</th>
            <th>Completion (\%)</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var update in Model) {
            <tr>
                <td>@update.WeekEndingDate.ToShortDateString()</td>
                <td>@update.Accomplishments</td>
                <td>@update.NextSteps</td>
                <td>@update.PercentComplete</td>
                <td>@update.StatusColor</td>
                <td>
                    <a href="/WeeklyUpdates/Edit/@update.Id" class="btn btn-sm btn-primary">Edit</a>
                    @* Additional buttons for approval/rejection based on roles *@
                </td>
            </tr>
        }
    </tbody>
</table>
