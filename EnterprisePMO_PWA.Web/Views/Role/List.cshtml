@model IEnumerable<EnterprisePMO_PWA.Domain.Entities.Role>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Roles List";
}
<h1>Roles</h1>
<a href="/Role/Create" class="btn btn-primary mb-3">Create New Role</a>
<table class="table">
    <thead>
        <tr>
            <th>Role Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var role in Model) {
            <tr>
                <td>@role.RoleName</td>
                <td>@role.Description</td>
                <td>
                    <a href="/Role/Edit?id=@role.Id" class="btn btn-sm btn-primary">Edit</a>
                    <form asp-action="Delete" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@role.Id" />
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
